{
  "name": "ai",
  "version": "1.0.0",
  "description": "A full-stack web application for displaying and managing online courses, built with Vue.js frontend and Node.js/Express backend using functional programming principles.",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"cd backend && npm run dev\" \"cd frontend && npm run dev\"",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "test": "cd frontend && npm run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:watch": "playwright test --ui --watch",
    "test:ui:full": "node -e \"require('child_process').execSync(process.platform === 'win32' ? 'scripts\\\\run-ui-tests.bat' : './scripts/run-ui-tests.sh', {stdio: 'inherit'})\"",
    "test:ui": "node -e \"require('child_process').execSync(process.platform === 'win32' ? 'scripts\\\\run-ui-tests.bat' : './scripts/run-ui-tests.sh', {stdio: 'inherit'})\"",
    "test:ui:interactive": "./scripts/run-ui-tests-ui.sh",
    "start:servers": "./scripts/start-servers.sh",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "install:playwright": "playwright install chromium"
  },
  "keywords": ["playwright", "e2e", "testing", "vue", "nodejs", "course-platform"],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.1"
  }
}
