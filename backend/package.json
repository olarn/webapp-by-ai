{
  "name": "course-platform-backend",
  "version": "1.0.0",
  "description": "Backend for course platform with functional programming",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "migrate": "ts-node src/database/migrate.ts",
    "seed": "ts-node src/database/seed-courses.ts",
    "seed:admin": "ts-node src/database/seed-admin.ts",
    "seed:analytics": "ts-node src/database/seed-analytics.ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.7",
    "fp-ts": "^2.16.2",
    "io-ts": "^2.2.22",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/sqlite3": "^3.1.11",
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.8",
    "typescript": "^5.3.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  },
  "overrides": {
    "inflight": "^1.0.6"
  }
}
